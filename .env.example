# Environment Variables Template for Power BI Dashboard Consolidation Tool
# Copy this file to .env and fill in your actual values

# OpenAI API Key (required for GPT-4 Vision analysis)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# API Authentication Token (for FastAPI endpoints)
# You can change this to any secure token
API_KEY=supersecrettoken123

# GPT Model Configuration
GPT_MODEL=gpt-4-vision-preview

# Application Configuration
VERSION=v1.0
DEBUG=false

# Optional: Adjust analysis parameters
SIMILARITY_THRESHOLD_MERGE=0.85
SIMILARITY_THRESHOLD_REVIEW=0.70
MAX_FILE_SIZE_MB=10